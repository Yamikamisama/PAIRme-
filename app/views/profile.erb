<div id="profile_wrapper">
	<div class="col-md-4">
		<div id="user_image">
			<img src="/img/ma.jpg">
		</div>
	</div>

	<div class="col-md-8">
		<div id="user_header">
			<h1>Username: <%= @user.username %></h1>
			<% @organizations.each do |org| %>
			<h2>Organization: <%= org.name %></h2>
			<% end %>
			<h2>Driver Score: <%= @user.driver_score %></h2>
			<h2>Navigator Score: <%= @user.navigator_score %> </h2>
		</div>
	</div>

	<div class="col-md-6">
		<div id="user_pairs">

			<!-- modal start -->
			<h1>Your Pairing Feedback</h1>
			<% @feedbacks.each_with_index do |feedback, index| %>
			<table>
			<tr><a data-toggle="modal" href="#myModal<%=index%>"><h3><%= feedback.giver.username %> | <%= feedback.created_at %></h3></a></tr>
			<!-- Modal -->
			</table>
			<div class="modal fade" id="myModal<%=index%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
							<h4 class="modal-title"><%= feedback.giver.username %> | <%= feedback.created_at %></h4>
						</div>
						<div class="modal-body">
							<h1>Question 1: <%= feedback.q1 %></h1>
							<h1>Question 2: <%= feedback.q2 %></h1>
							<h1>Question 3: <%= feedback.q3 %></h1>
							<h1>Comments: <%= feedback.content %></h1>
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
			<!-- modal end -->
			<% end %>
		</div>
	</div>

	<div class="col-md-6">
		<div id="user_data">
			<div id="donut_single" style="width: 100%; height:500px;"></div>

		</div>
	</div>
</div>
</div>
